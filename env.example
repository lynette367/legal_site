# NextAuth 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here_generate_with_openssl_rand_base64_32"

# Session 过期时间（秒）
# 默认：604800（7 天）
# 示例：86400（1 天）、604800（7 天）、2592000（30 天）
SESSION_MAX_AGE="604800"

# 邮箱配置（用于登录验证）
EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
EMAIL_FROM="Panco Legal <noreply@panco.com>"

# DeepSeek API 配置
DEEPSEEK_API_KEY="your_deepseek_api_key_here"
DEEPSEEK_API_BASE="https://api.deepseek.com"

# PayPal 配置
# 获取方式：https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox  # sandbox 或 live

# 前端 PayPal Client ID（与后端相同）
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# 应用 URL（用于支付回调）
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 数据库配置
# SQLite (开发环境)
DATABASE_URL="file:./dev.db"

# PostgreSQL (生产环境)
# DATABASE_URL="postgresql://user:password@localhost:5432/legal_law_db?schema=public"

# MySQL (生产环境)
